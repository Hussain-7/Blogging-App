<%- include('partials/header') %>
<div id="heading" class="ui main text container segment">
<div class="ui huge header">Edit <%=blog.title%></div>
<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
<div class="field">
    <label for="">Title</label>
    <input type="text" name="blog[title]" placeholder="title" value="<%=blog.title%>">
</div>
<div class="field">
    <label for="">Image</label>
    <input type="text" name="blog[image]" placeholder="image" value="<%=blog.image%>">
</div>
<div class="field">
    <label for="">Body</label>
    <textarea name="blog[body]"  rows="5" placeholder="body.." ><%=blog.body%></textarea>
</div>
<button id="edit-btn"class="ui violet big basic button">Post</button>
</form>
</div>
<%- include('partials/footer') %>